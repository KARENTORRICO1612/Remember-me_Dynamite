       tools:ignore="MissingConstraints"
       tools:layout_editor_absoluteX="16dp"
       tools:layout_editor_absoluteY="70dp" />

   <EditText
       android:id="@+id/txtTitulo2"
       android:layout_width="381dp"
       android:layout_height="50dp"
